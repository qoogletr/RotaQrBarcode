<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="scanItem"
            type="com.rota.RotaQrBarcode.model.ScanItem" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvScanText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{scanItem.scanText}" />

            <TextView
                android:id="@+id/tvScanDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{scanItem.scanDate}" />
        </LinearLayout>
    </androidx.cardview.widget.CardView> <!-- Kapanış etiketi buraya eklendi -->

</layout>
