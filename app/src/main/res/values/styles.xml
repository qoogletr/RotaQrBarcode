<?xml version="1.0" encoding="utf-8"?>
<resources>
 
    <!-- Buton Stilleri -->
    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="android:paddingTop">@dimen/spacing_m</item>
        <item name="android:paddingBottom">@dimen/spacing_m</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="OutlineButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:paddingTop">@dimen/spacing_m</item>
        <item name="android:paddingBottom">@dimen/spacing_m</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Tarama Ä°lgili Stiller -->
    <style name="ScannerOverlay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/scan_overlay</item>
    </style>

    <style name="ScanResultText" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:background">@color/result_content_background</item>
        <item name="android:padding">@dimen/spacing_m</item>
    </style>
</resources>
